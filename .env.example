# ============================================
# CommentBot v2.0 Configuration
# Copy this file to .env and fill in values
# ============================================

# --- Database (PostgreSQL) ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=commentbot
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=commentbot

# --- Telegram API (get from https://my.telegram.org) ---
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# --- Bot Token (get from @BotFather) ---
BOT_TOKEN=

# --- Security ---
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_ENCRYPTION_KEY=

# --- Logging ---
# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=DEBUG
# true = human-readable, false = JSON (for production)
LOG_PRETTY=true

# --- Worker Timings (seconds) ---
# Delay between comments on different channels (per account)
WORKER_MIN_COMMENT_DELAY=60
WORKER_MAX_COMMENT_DELAY=120
# Delay between small actions (profile copy, join, etc.)
WORKER_ACTION_DELAY=5
# How often to check if comment is still alive (seconds)
WORKER_HEALTH_CHECK_INTERVAL=900
# How often to delete and re-post comment (seconds)
WORKER_REPOST_INTERVAL=1800
# Max concurrent Telethon connections
WORKER_MAX_CONNECTIONS=20
